<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Teams - Fantasy Football Manager</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <nav class="sidebar">
            <h2>Fantasy Football</h2>
            <ul>
                <li><a href="/">Dashboard</a></li>
                <li><a href="/teams" class="active">My Teams</a></li>
                <li><a href="/players">Player Search</a></li>
                <li><a href="/players?position=QB">Quarterbacks</a></li>
                <li><a href="/players?position=RB">Running Backs</a></li>
                <li><a href="/players?position=WR">Wide Receivers</a></li>
                <li><a href="/players?position=TE">Tight Ends</a></li>
                <li><a href="/players?position=K">Kickers</a></li>
                <li><a href="/players?position=DEF">Defense</a></li>
            </ul>
        </nav>
        
        <main class="main-content">
            <div class="header">
                <h1>My Teams</h1>
                <p>Manage your fantasy football teams</p>
            </div>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>
            
            <div class="content-section">
                <% if (teams && teams.length > 0) { %>
                    <% teams.forEach(team => { %>
                        <div class="team-card">
                            <h3><%= team.name %></h3>
                            <p>Owner: <%= team.owner ? team.owner.username : 'Unknown' %></p>
                            <div class="team-stats">
                                <div class="stat-item">
                                    <div class="stat-value">$<%= team.budget ? team.budget.toFixed(2) : '0.00' %></div>
                                    <div class="stat-label">Budget Remaining</div>
                                </div>
                            </div>
                            <div style="margin-top: 15px;">
                                <a href="/team/<%= team.id %>" class="btn btn-primary btn-small">View Team</a>
                                <a href="/players?teamId=<%= team.id %>" class="btn btn-success btn-small">Add Players</a>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div style="text-align: center; padding: 40px;">
                        <h3>No teams found</h3>
                        <p>You don't have any teams yet. Create your first team to get started!</p>
                        <button class="btn btn-primary" style="margin-top: 15px;">Create Team</button>
                    </div>
                <% } %>
            </div>
        </main>
    </div>
    
    <script src="/js/app.js"></script>
</body>
</html>